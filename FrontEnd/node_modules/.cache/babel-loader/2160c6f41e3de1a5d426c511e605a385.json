{"ast":null,"code":"export default {\n  props: {\n    product: {\n      type: Object,\n      required: true\n    }\n  },\n\n  data() {\n    return {\n      colors: this.product.color,\n      valueSl: 1,\n      dl: true\n    };\n  },\n\n  methods: {\n    active() {\n      console.log(this.colors.length);\n    },\n\n    reduce() {\n      if (this.valueSl > 1) {\n        this.valueSl--;\n      }\n    },\n\n    increase() {\n      if (this.valueSl < 100) {\n        this.valueSl++;\n      }\n    },\n\n    displaymt() {\n      if (this.$refs.mtev.classList.contains(\"active\")) {\n        this.$refs.mtev.classList.remove(\"active\");\n      } else {\n        this.$refs.mtev.classList.add(\"active\");\n      }\n    },\n\n    formatter(data) {\n      const fm = new Intl.NumberFormat(\"vi-VN\", {\n        style: \"currency\",\n        currency: \"VND\",\n        minimumFractionDigits: 0\n      });\n      data = fm.format(data);\n      return data;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAgGA,eAAe;EACbA,KAAK,EAAE;IACLC,OAAO,EAAE;MACPC,IAAI,EAAEC,MADC;MAEPC,QAAQ,EAAE;IAFH;EADJ,CADM;;EAObC,IAAI,GAAG;IACL,OAAO;MACLC,MAAM,EAAE,KAAKL,OAAL,CAAaM,KADhB;MAELC,OAAO,EAAE,CAFJ;MAGLC,EAAE,EAAE;IAHC,CAAP;EAKD,CAbY;;EAcbC,OAAO,EAAE;IACPC,MAAM,GAAG;MACPC,OAAO,CAACC,GAAR,CAAY,KAAKP,MAAL,CAAYQ,MAAxB;IACD,CAHM;;IAIPC,MAAM,GAAG;MACP,IAAI,KAAKP,OAAL,GAAe,CAAnB,EAAsB;QACpB,KAAKA,OAAL;MACF;IACD,CARM;;IASPQ,QAAQ,GAAG;MACT,IAAI,KAAKR,OAAL,GAAe,GAAnB,EAAwB;QACtB,KAAKA,OAAL;MACF;IACD,CAbM;;IAcPS,SAAS,GAAG;MACV,IAAI,KAAKC,KAAL,CAAWC,IAAX,CAAgBC,SAAhB,CAA0BC,QAA1B,CAAmC,QAAnC,CAAJ,EAAkD;QAChD,KAAKH,KAAL,CAAWC,IAAX,CAAgBC,SAAhB,CAA0BE,MAA1B,CAAiC,QAAjC;MACF,CAFA,MAEO;QACL,KAAKJ,KAAL,CAAWC,IAAX,CAAgBC,SAAhB,CAA0BG,GAA1B,CAA8B,QAA9B;MACF;IACD,CApBM;;IAqBPC,SAAS,CAACnB,IAAD,EAAO;MACd,MAAMoB,EAAC,GAAI,IAAIC,IAAI,CAACC,YAAT,CAAsB,OAAtB,EAA+B;QACxCC,KAAK,EAAE,UADiC;QAExCC,QAAQ,EAAE,KAF8B;QAGxCC,qBAAqB,EAAE;MAHiB,CAA/B,CAAX;MAKAzB,IAAG,GAAIoB,EAAE,CAACM,MAAH,CAAU1B,IAAV,CAAP;MACA,OAAOA,IAAP;IACD;;EA7